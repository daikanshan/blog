<% if nav.level==0 %>
  <li class="topnav">
<% else %>
  <li class="subnavs">
<% end %>
  <% if nav.subnavs.count==0 %>
    <%= link_to nav.text,nav.url  %>
    <%= render(nav.subnavs) %>
  <% else %>
    <a href=<%= nav.url %>><%= nav.text %><span class="glyphicon glyphicon-menu-down"></span></a>
    <ul class="subnav ">
      <%= render(nav.subnavs) %>
    </ul>
  <% end %>
</li>
