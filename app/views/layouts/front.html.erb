<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Front</title>
  <%= stylesheet_link_tag    'front', media: 'all' %>
  <%= javascript_include_tag 'front' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <nav class="navbar navbar-default">
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav topnav">
        <%= render(@topnavs) %>
        </ul>
        <%= form_tag front_search_path, method: :get, class: "navbar-form navbar-right search-form " do %>
          <div class="form-group has-feedback">
            <%= search_field_tag(
                :search,
                params[:search],
                placeholder: "按下回车键搜索",
                class: "form-control"
            ) %>
            <span class="glyphicon glyphicon-search form-control-feedback"></span>
          </div>
        <% end %>
      </div>
    </nav>
  </div>

  <div class="mainer">
    <%= yield %>
  </div>

  <div class="footer">

  </div>

  <%= javascript_include_tag params[:controller] %>
</body>
</html>
