<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>admin</title>
  <%= stylesheet_link_tag    'admin', media: 'all' %>
  <%= javascript_include_tag 'admin' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    This is the header
  </div>

  <div class="mainer">
    <nav class="side_nav col-sm-3">
      <header>
        <ul class="nav">
          <% @navs.each do |nav| %>
            <% if params[:controller] == nav[:options][:controller] && params[:action] == nav[:options][:action] %>
              <li class="active">
                <a href="<%= url_for nav[:options] %>" class="link">
                  <i class="glyphicon glyphicon-<%= nav[:icon] %>"></i>
                  <span><%= nav[:text] %></span>
                </a>
              </li>
            <% else %>
              <li>
                <a href="<%= url_for nav[:options] %>" class="link">
                <i class="glyphicon glyphicon-<%= nav[:icon] %>"></i> <%= nav[:text] %></a>
              </li>
            <% end %>
          <% end %>
        </ul>
      </header>
    </nav>
    <div class="main col-sm-9">
      <%= yield %>
    </div>
  </div>

  <div class="footer">

  </div>

  <%= javascript_include_tag params[:controller] %>
</body>
</html>
