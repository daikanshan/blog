<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>admin</title>
  <%= stylesheet_link_tag    'admin' %>
  <%= javascript_include_tag 'admin' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <%= button_to "返回首页",root_path,method:"get" ,class:"btn btn-primary" %>
    <%= button_to "退出登陆",admin_logout_path,method:"post",class:"btn btn-primary" %>
  </div>

  <div class="content">
    <nav class="side_nav col-sm-3">
      <header>
        <ul class="nav">
          <% @navs.each do |nav| %>
            <% if params[:controller] == nav[:options][:controller] && params[:action] == nav[:options][:action] %>
              <li class="active">
                <a href="<%= url_for nav[:options] %>" class="link active">
                  <i class="glyphicon glyphicon-<%= nav[:icon] %>"></i>
                  <span><%= nav[:text] %></span>
                </a>
              </li>
            <% else %>
              <li>
                <a href="<%= url_for nav[:options] %>" class="link">
                <i class="glyphicon glyphicon-<%= nav[:icon] %>"></i> <%= nav[:text] %></a>
              </li>
            <% end %>
          <% end %>
        </ul>
      </header>
    </nav>
    <div class="main col-sm-9">
      <%= yield %>
    </div>
  </div>

  <div class="footer">

  </div>

</body>
</html>
