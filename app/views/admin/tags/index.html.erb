<p id="notice"><%= notice %></p>

<h1>标签管理</h1>
<div class="quick_option btn-group" role="group" base-url="<%= admin_tags_url %>">
  <a href="<%= new_admin_tag_path %>" data-method="get" rel="nofollow" class="btn btn-default">
    <i class="glyphicon glyphicon-plus"></i>
    新建标签
  </a>
  <a id="view" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-align-justify"></i>
    详细信息
  </a>
  <a id="edit" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-pencil"></i>
    编辑
  </a>
  <a id="del" rel="nofollow" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-trash"></i>
    批量删除
  </a>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <input type="checkbox" class="p_checkbox" id="check_all">
      </th>
      <th>名称</th>
      <th>文章数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tags.each do |admin_tag| %>
      <tr class="item_line">
        <td>
          <input type="checkbox" class="p_checkbox" value="<%= admin_tag.id %>">
        </td>
        <td><%= link_to admin_tag.name,admin_messages_url+"/?tag=#{admin_tag.name}" %></td>
        <td><%= admin_tag.messages.count %></td>
        <td>
          <div class="dropdown">
            <a id="btn1" class="btn btn-link" type="button" data-toggle="dropdown">
              编辑
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to '详细信息', admin_tag %></li>
              <li><%= link_to '编辑', edit_admin_tag_path(admin_tag) %></li>
              <li><%= link_to '删除', admin_tag, method: :delete, data: { confirm: "确定要删除该标签？" } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
