<p id="notice"><%= notice %></p>

<h1>用户管理</h1>
<div class="quick_option btn-group" role="group" base-url="<%= admin_users_url %>">
  <a href="<%= new_admin_user_path %>" data-method="get" rel="nofollow" class="btn btn-default">
    <i class="glyphicon glyphicon-plus"></i>
    新建用户
  </a>
  <a id="view" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-align-justify"></i>
    详细信息
  </a>
  <a id="edit" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-pencil"></i>
    编辑
  </a>
  <a id="del" rel="nofollow" class="btn btn-default" disabled="disabled">
    <i class="glyphicon glyphicon-trash"></i>
    批量删除
  </a>
</div>
<table class="table table-hover">
  <thead>
    <tr class="">
      <th>
        <input type="checkbox" class="p_checkbox" id="check_all">
      </th>
      <th>用户名</th>
      <th>姓名</th>
      <th>邮箱</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr class="item_line">
        <td>
          <input type="checkbox" class="p_checkbox" value="<%= admin_user.id %>">
        </td>
        <td><%= link_to admin_user.username,admin_user_path(admin_user) %></td>
        <td><%= admin_user.realname %></td>
        <td><%= admin_user.email %></td>
        <td>
          <div class="dropdown">
            <a id="btn1" class="btn btn-link" type="button" data-toggle="dropdown">
              编辑
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to '详细信息', admin_user %></li>
              <li><%= link_to '编辑', edit_admin_user_path(admin_user) %></li>
              <li><%= link_to '删除', admin_user, method: :delete, data: { confirm: "确定要删除该用户？" } %></li>
            </ul>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
