<%= javascript_include_tag "ckeditor/init" %>
<%= form_for(@admin_message) do |f| %>
  <% if @admin_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_message.errors.count, "error") %> prohibited this admin_message from being saved:</h2>

      <ul>
      <% @admin_message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "标题" %><br>
    <%= f.text_field :title,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "内容" %><br>
    <%= f.cktext_area :content, :ckeditor => {:uiColor => '#fefefe', :toolbar => 'mini'}  %>
  </div>
  <div class="sr-only">
    <%= f.text_field :author,value:session[:username] %>
  </div>
  <div class="sr-only">
    <%= f.label "作者" %><br>
    <%= f.text_field :user_id,value:session[:user_id] %>
  </div>
  <div class="form-group">
    <%= f.label "分类" %><br>
    <%= f.select :category,options_from_collection_for_select(@categories,'name','name'),class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "标签" %><br>
    <%= f.text_field :tag ,class:"form-control" %>
  </div>

  <div class="form-group col-sm-3">
    <%= f.submit "提交",class:"form-control" %>
  </div>
<% end %>
